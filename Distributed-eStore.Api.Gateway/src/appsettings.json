{
  "app": {
    "name": "api.gateway"
  },
  "fabio": {
    "enabled": false,
    "url": "http://localhost:9999",
    "service": "",
    "requestRetries": 3
  },
  "consul": {
    "enabled": false,
    "url": "http://localhost:8500",
    "service": "api",
    "address": "host.docker.internal",
    "port": "5000",
    "pingEnabled": false,
    "pingEndpoint": "ping",
    "pingInterval": 5,
    "removeAfterInterval": 10,
    "requestRetries": 3
  },
  "rabbitMq": {
    "namespace": "api",
    "retries": 3,
    "retryInterval": 2,
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "localhost"
    ],
    "requestTimeout": "00:00:10",
    "publishConfirmTimeout": "00:00:01",
    "recoveryInterval": "00:00:10",
    "persistentDeliveryMode": true,
    "autoCloseConnection": true,
    "automaticRecovery": true,
    "topologyRecovery": true,
    "exchange": {
      "durable": true,
      "autoDelete": false,
      "type": "Topic"
    },
    "queue": {
      "autoDelete": false,
      "durable": true,
      "exclusive": false
    }
  },
  "restEase": {
    "loadBalancer": "",
    "services": [
      {
        "name": "products-service",
        "host": "localhost",
        "scheme": "http",
        "port": "5001"
      }
    ]
  }
}